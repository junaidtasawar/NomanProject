    var DeleteEmployee = function () {

        $("#loaderDiv").show();

        var empId = $("#hiddenSpecialistTypeId").val();

        $.ajax({

            type: "POST",
            url: "/Admin/DeleteEmployee",
            data: { SpecialistTypeId: empId },
            success: function (result) {
                $("#loaderDiv").hide();
                $("#myModal").modal("hide");
                $("#row_" + empId).remove();

            }

        })

