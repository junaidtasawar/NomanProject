@model WebBasedSystem.ViewModels.NotesModel
@{
    Layout = "~/Views/Shared/_AdministratorLayout.cshtml";
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<style>
    tr:nth-child(even) {
        background-color: #f2f2f2;
    }
</style>

<div class="container" style="width:40%;margin-top:2%">
    <div class="row">
        <div class="col-lg-12 mb-4" style="margin-left: -422px;">
            <!-- Simple Tables -->
            <div class="card" style="width:270%;">
                <div class="table-responsive">
                    <table class="table align-items-center table-flush" style="width: 100%">
                        <colgroup>
                            <col span="1" style="width: 70%;">
                        </colgroup>
                        <thead>
                            <tr style="background-color:darkblue;">
                                <th style="color:white;">Notes Description</th>
                                <th style="color:white;">Taking NewPatients</th>
                                <th style="color:white;">Price</th>
                                <th style="color:white;">Waiting Time</th>
                                <th style="color:white;">Booking</th>
                                <th></th>
                                <th></th>

                            </tr>
                        </thead>

                        <tbody>
                            @if (ViewBag.EmployeeList != null)
            {

                foreach (var item in ViewBag.EmployeeList)
                {
                                    <tr id="row_@item.NoteId">
                                        <td>@item.NotesDescription</td>

                                        <td>
                                            @if(@item.TakingNewPatients==true)
                                            {
                                            <p>
                                                Yes
                                            </p>
                                            }
                                            else
                                            {
                                                <p>
                                                    No
                                                </p>
                                            }
                                        </td>
                                        <td>@item.price</td>
                                        <td>@item.Waiting_Time</td>

                                        <td>
                                            @if (@item.IsBooking ==true)
                                            {
                                                <p>
                                                    Yes
                                                </p>
                                            }
                                            else
                                            {
                                                <p>
                                                    No
                                                </p>
                                            }
                                    </td>

                                        <td><a href="#" class="btn btn-outline-success mb-1" onclick="getEmployeeById(@item.NoteId)"><i class="fas fa-edit"></i> </a> </td>

                                        <td><a href="#" class="btn btn-outline-danger mb-1" onclick="ConfirmDelete(@item.NoteId)"><i class="fas fa-trash-alt"></i></a>  </td>

                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card-footer"></div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h4>Are You Sure ?</h4>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="DeleteEmployee()">Delete</button>
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="hiddenNotesId" />

<script>
    function getEmployeeById(id) {
        debugger;
        var url = "/Admin/GetNotes?NoteId=" + id;

        //$("#MyModalEdit").modal();

        $.ajax({
            url:url,
            type: 'GET',
            success: function (data) {
                //var obj = JSON.parse(data);

                //$("#SpecialistTypeId").val(obj.SpecialistTypeId);
                //$("#NameEdit").val(obj.Name);

                window.location.href = data.redirecturl;


            },
            error: function (err) {
                alert("Error: " + err.responseText);
            }
        });
    }

    var ConfirmDelete = function (NoteId) {

        $("#hiddenNotesId").val(NoteId);
        console.log("Inside");
        $("#myModal").modal('show');
        console.log("Outside");

    }


    var DeleteEmployee = function () {

        $("#loaderDiv").show();

        var empId = $("#hiddenNotesId").val();

        $.ajax({

            type: "POST",
            url: "/Admin/DeleteNotes",
            data: { NoteId: empId },
            success: function (result) {
                swal("The notes record is deleted sucessfully", "success");
                $("#loaderDiv").hide();
                $("#myModal").modal("hide");
                $("#row_" + empId).remove();

            }

        })

    }
</script>
